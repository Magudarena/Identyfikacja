@model Identyfikacja.Models.Dane
@{
    ViewData["Title"] = "Form";
}
@using (Html.BeginForm("Wynik", "Home", FormMethod.Post))
{
<form asp-action="Klient" method="post">
        <div asp-validation-summary="All"></div>
    <div>
        <label asp-for="Imie">Imię</label>
        <input asp-for="Imie" />
        <span asp-validation-for="Imie" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Nazwisko">Nazwisko</label>
        <input asp-for="Nazwisko" />
        <span asp-validation-for="Nazwisko" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Email">Email</label>
        <input asp-for="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="NrTelefonu">Numer telefonu</label>
        <input asp-for="NrTelefonu" type="tel" />
        <span asp-validation-for="NrTelefonu" class="text-danger"></span>
    </div>

    <div>
        <button type="submit" class="btn btn-primary">Zarejestruj</button>
        <button type="reset" class="btn btn-secondary">Wyczyść</button>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>
}
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}